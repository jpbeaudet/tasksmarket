extends ../layouts/default
block content
    nav.navbar.navbar-default
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') 
        // Collect the nav links, forms, and other content for toggling
        #navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a#loc(href='#') My Location
            li
              a(href='/profile') My Profile
            li
              a(href='/myjobs') My Jobs
            li
              a(href='/contact') Contact/Help
      .panel.panel-default(style='margin-left:4%;margin-right:4%;border-style:none')
         .container#loc_container(hidden='', style='border-style:none;')
           .row-fluid
            .col
               .span8
                 iframe(width='100%', height='350', frameborder='0', scrolling='no', marginheight='0', marginwidth='0', src='https://maps.google.co.uk/maps?f=q&source=s_q&hl=en&geocode=&q=15+Springfield+Way,+Hythe,+CT21+5SH&aq=t&sll=52.8382,-2.327815&sspn=8.047465,13.666992&ie=UTF8&hq=&hnear=15+Springfield+Way,+Hythe+CT21+5SH,+United+Kingdom&t=m&z=14&ll=51.077429,1.121722&output=embed')
            .col
               .span4
                 h2 Snail mail
                 address
                   strong Hythe Window Cleaning
                   br
                   |     			15 Springfield Way
                   br
                   |     			Hythe
                   br
                   |     			Kent
                   br
                   |     			United Kingdon
                   br
                   |     			CT21 5SH
                   br
                   abbr(title='Phone') P:
                   |  01234 567 890
    .container
      .row.profile
        .col-md-3
          .profile-sidebar
            // SIDEBAR USERPIC
            .profile-userpic
              if avatar
                img(src="#{avatar}")
            // END SIDEBAR USERPIC
            // SIDEBAR USER TITLE
            .profile-usertitle
              .profile-usertitle-name
                b=username
              .profile-usertitle-job
                i=jobtitle
                br
                p(style='color:grey;')=hourworked                
            // END SIDEBAR USER TITLE
            // SIDEBAR BUTTONS
            .profile-userbuttons
              button.btn.btn-success.btn-sm(type='button') Follow
              button.btn.btn-danger.btn-sm(type='button') Message
            // END SIDEBAR BUTTONS
            // SIDEBAR MENU
            .profile-usermenu
              ul.nav
                li.active
                  a(href='#')
                    i.glyphicon.glyphicon-home
                    | 							Overview
                li
                  a(href='#')
                    i.glyphicon.glyphicon-user
                    | 							Account Settings
                li
                  a(href='#', target='_blank')
                    i.glyphicon.glyphicon-ok
                    | 							Tasks
                li
                  a(href='#')
                    i.glyphicon.glyphicon-flag
                    | 							Help
            // END MENU
        .col-md-9
          .profile-content
            h2 My Profile
            | Some user related content goes here...

    br
    br
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')
    script(src='/app/control.js')
    script(src='/js/jquery.flot.min.js')